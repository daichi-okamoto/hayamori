<% content_for(:title, '新規登録') %>
<body>
  <%= render 'layouts/before_login_header' %>
  <main class="flex-1 flex items-center justify-center h-[calc(100vh-64px)] bg-slate-50 p-6">
    <div class="max-w-lg w-full mx-auto bg-white p-6 rounded-lg shadow-md">
       <!-- 新規登録フォームの開始 -->
       <%= form_with model: @user, url: users_path, local: true do |f| %>
       <!-- タイトルと戻るボタン -->
       <div class="flex justify-between items-center mb-6 pb-2 border-b">
         <h2 class="text-2xl text-gray-600">新規登録</h2>
         <%= link_to 'ログインはこちら', login_path, class: 'bg-white border text-sm text-gray-500 font-bold px-3 py-1 rounded hover:bg-sky-400 hover:border-sky-400 hover:text-white duration-300 transition active:scale-95' %>
       </div>

       <!-- メールアドレス入力欄 -->
       <div class="mb-4">
         <%= f.label :メールアドレス, class: 'block text-gray-600' %>
         <%= f.email_field :email, class: 'w-full text-gray-600 text-sm border rounded py-2 px-3 focus:outline-none focus:ring-1 focus:ring-sky-400' %>
       </div>

       <!-- パスワード入力欄 -->
       <div class="mb-4">
         <%= f.label :パスワード, class: 'block text-gray-600' %>
         <%= f.password_field :password, class: 'w-full text-gray-600 text-sm border rounded py-2 px-3 focus:outline-none focus:ring-1 focus:ring-sky-400' %>
       </div>

       <!-- パスワード確認入力欄 -->
       <div class="mb-4">
         <%= f.label :password_confirmation, 'パスワード確認', class: 'block text-gray-600' %>
         <%= f.password_field :password_confirmation, class: 'w-full text-gray-600 text-sm border rounded py-2 px-3 focus:outline-none focus:ring-1 focus:ring-sky-400' %>
       </div>

       <!-- 送信ボタン -->
       <div class="flex justify-center">
         <%= f.submit '登録', class: 'bg-sky-400 w-full font-bold text-white py-2 mt-4 rounded hover:bg-sky-500 duration-300 transition active:scale-95' %>
       </div>
     <% end %>
     <!-- 新規登録フォームの終了 -->
    </div>
  </main>
</body>